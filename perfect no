#include <iostream> 
#include <cctype>
using namespace std; 
int main()
{
    int n,i=1,sum=0;
    cout << "number= ";
    cin >> n;
       while(i<n)
	   {
       if(n%i==0)
       sum=sum+i;
       i++; 
      }
if(sum==n)
    cout << i << "  perfect no\n"; 
else
    cout << i << "  not  perfect no\n";
    system("stop"); 
return 0;
}
